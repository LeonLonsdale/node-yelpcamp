<% layout('/layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add Campground</a>
<ul>
  <% for (let campground of campgrounds) {%>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <% if (campground.images.length) {%>
        <img
          src="<%=campground.images[0].url%>"
          class="img-fluid rounded-start"
          alt="..."
        />
        <% } else { %>
        <img
          src="https://fakeimg.pl/500x500?text=No+Images"
          class="img-fluid rounded-start"
          alt="..."
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=campground.title%></h5>
          <p class="card-text"><%=campground.description%></p>
          <p class="card-text">
            <small class="text-body-secondary"><%= campground.location%></small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>"
            >View</a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</ul>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {
    features: <%-JSON.stringify(campgrounds
      .map(campground =>
        Object.keys(campground._doc)
          .filter(key => key !== 'author' && key !== '_id' && key !== 'images' && key !== 'reviews' && key !== '__v')
          .reduce((obj, key) => {
            obj[key] = campground[key];
            return obj;
          }, {})))%>
  };
</script>
<script src="scripts/clustermap.js"></script>
